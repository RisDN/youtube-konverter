{
  "name": "yt-konverter",
  "productName": "Youtube Konverter",
  "version": "1.0.0",
  "description": "Töltsd le egyszerűen, gyorsan kedvenc videóidat a legnagyobb videómegosztó oldalról.",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build-installer": "electron-builder"
  },
  "build": {
    "appId": "yt-konverter",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/src/ikon.ico"
    },
    "nsis": {
      "installerIcon": "src/src/ikon.ico",
      "uninstallerIcon": "src/src/ikon.ico",
      "uninstallDisplayName": "Youtube Konvertáló eltávolítása",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "nsis": {
    "installerIcon": "src/src/ikon.ico",
    "uninstallerIcon": "src/src/ikon.ico",
    "uninstallDisplayName": "Youtube Konvertáló eltávolítása",
    "oneClick": "false",
    "allowToChangeInstallationDirectory": true
  },
  "keywords": [],
  "author": {
    "name": "Ris",
    "email": "r.andriska05@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "yt_konverter"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "ytdl-core": "^4.9.1"
  },
  "devDependencies": {
    "electron-builder": "^22.11.7",
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "electron": "^13.1.2"
  }
}
